rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create/update their own profile
      allow create, update: if isOwner(userId);
      
      // Users cannot delete their profile (admin only)
      allow delete: if false;
      
      // User subcollections
      match /profile/{profileId} {
        allow read, write: if isOwner(userId);
      }
      
      match /progress/{progressId} {
        allow read, write: if isOwner(userId);
      }
      
      match /assessments/{assessmentId} {
        allow read, write: if isOwner(userId);
      }
      
      match /chat_history/{chatId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Courses collection - public read, admin write
    match /courses/{courseId} {
      // Anyone can read course metadata
      allow read: if true;
      
      // Only admins can write (will be restricted further with custom claims)
      allow write: if isAuthenticated() && request.auth.token.admin == true;
      
      // Course content subcollection
      match /content/{contentId} {
        allow read: if true;
        allow write: if isAuthenticated() && request.auth.token.admin == true;
      }
      
      // Course lessons subcollection
      match /lessons/{lessonId} {
        allow read: if true;
        allow write: if isAuthenticated() && request.auth.token.admin == true;
      }
    }
    
    // Licensees collection - admin only
    match /licensees/{licenseeId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.token.admin == true;
      
      // Licensee-specific configurations
      match /personas/{personaId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && request.auth.token.admin == true;
      }
      
      match /provider_voice/{voiceId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && request.auth.token.admin == true;
      }
    }
    
    // Generated content cache (AI-generated personalized content)
    match /generated_content/{contentId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

